# setup supervisor

# Disallow shell questions
export DEBIAN_FRONTEND=noninteractive


apt-get install -y supervisor || exit 1

/etc/init.d/supervisor stop

cat >> /etc/supervisor/supervisord.conf <<EOF
[supervisord]
nodaemon=true
EOF


#[[ $1 == "boot" ]] && set_entry /usr/bin/supervisord

#add_boot "echo -e [supervisord]\\\\nnodaemon=false >  /etc/supervisor/conf.d/daemon.conf"
#add_boot service supervisor start

#add_down rm /etc/supervisor/conf.d/daemon.conf
#add_down service supervisor stop
